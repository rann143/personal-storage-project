<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/index.css" />
    <title>Home</title>
  </head>
  <body>
    <h1><%= user.username %>, Welcome to Your Personal Storage</h1>
    <div class="container">
      <div class="folders-section">
        <div class="folder-list">
          <h2>Folders</h2>
          <% if (folders) { %>
          <ul>
          <% folders.forEach((folder) => { %>
            <li><a href="/home/<%= folder.name %>/<%= folder.id %>"><%= folder.name %></a></li>
          <% }); %>
          </ul>
          <% } %>
        </div>
        <form method="POST" class="add-folder-form">
          <label for="folder-name-input"><strong>Add Folder:</strong></label>
          <input
            type="text"
            name="folder_name"
            id="folder-name-input"
            placeholder="Folder Name"
          />
          <button type="submit">Submit</button>
        </form>
      </div>
      <div class="folder-contents">
        <h2>Home</h2>
      </div>
    </div>

    <br />
    <form method="post" action="/logout">
      <button type="submit">Logout</button>
    </form>

    <% if (success) { %>
    <p><%=success %></p>
    <% } %>

    <% if (errors) { %>
    <ul>
        <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
        <% }); %>
    </ul>
    <% } %>
  </body>
</html>
