generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String  
  expiresAt   DateTime
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  folders   Folder[]
  isMember  Boolean  @default(false)
}

model File {
  id          Int     @id @default(autoincrement())
  name        String  
  link        String  
  size        Int
  uploadTime  String
  folder      Folder  @relation(fields: [folderId], references: [id])
  folderId    Int     

  @@unique(name: "fileUnique",[name, folderId])
}

model Folder {
  id      Int     @id @default(autoincrement())
  name    String  
  user    User    @relation(fields: [userId], references: [id])
  userId  Int     
  files   File[]

  @@unique(name: "folderUnique", [name, userId])
}


